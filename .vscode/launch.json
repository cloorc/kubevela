{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "remote",
      "type": "go",
      "debugAdapter": "dlv-dap",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/workspace",
        },
      ],
    },
    {
      "name": "apiserver",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/apiserver",
      "cwd": "${workspaceFolder}",
      "trace": "log",
      "buildFlags": "-a -buildmode=exe",
    },
    {
      "name": "vela",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "references/cmd/cli",
      "cwd": "${workspaceFolder}",
      "trace": "log",
      "buildFlags": "-a -buildmode=exe",
      "args": [
        "-n",
        "vela-apps",
        "workflow",
        "restart",
        "alert"
      ],
    }
  ]
}